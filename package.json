{
  "name": "input-verifier",
  "version": "0.0.0",
  "description": "Some useful functions to check common data input.",
  "author": "Jose Luis Quintana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseluisq/input-verifier.git"
  },
  "engines": {
    "node": ">= 4.0"
  },
  "main": "index.js",
  "scripts": {
    "test:tape": "tape __tests__/*.test.js",
    "test": "npm run lint && nyc -n index.js npm run test:tape",
    "lint": "eslint index.js test.js",
    "coverage": "coveralls < ./coverage/lcov.info"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "coveralls": "^2.11.16",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "nyc": "^10.1.2",
    "readline-sync": "^1.4.6",
    "tape": "^4.6.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "istanbul"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "checkCoverage": true,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "keywords": [
    "copy",
    "remove",
    "random",
    "temporary",
    "temp",
    "directory",
    "file"
  ]
}
